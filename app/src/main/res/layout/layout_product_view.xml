<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.5dp"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:id="@+id/la_pro_main"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_pro_img"
            android:layout_margin="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#efefef"
            app:srcCompat="@drawable/ic_img_icon" />

        <TextView
            android:id="@+id/tv_pro_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Product Name"
            android:textColor="@color/black"
            android:layout_alignTop="@+id/iv_pro_img"
            android:layout_toRightOf="@+id/iv_pro_img"
            android:layout_toEndOf="@+id/iv_pro_img" />

        <ImageView
            android:id="@+id/iv_pro_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/tv_pro_name"
            android:layout_weight="0.12"
            android:layout_alignLeft="@+id/tv_pro_name"
            android:src="@drawable/ic_menu_dots"
            android:layout_margin="5dp"
            android:layout_alignRight="@+id/tv_pro_name" />

        <TextView
            android:id="@+id/tv_pro_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Product price"
            android:layout_below="@+id/tv_pro_name"
            android:layout_alignLeft="@+id/tv_pro_name"
            android:layout_alignStart="@+id/tv_pro_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/tv_pro_descri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_alignLeft="@+id/tv_pro_price"
            android:layout_alignStart="@+id/tv_pro_price"
            android:layout_below="@+id/tv_pro_price"
            android:layout_marginTop="10dp"
            android:text="Description"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/tv_pro_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="5dp"
            android:textSize="13dp"
            android:text="views"
            android:layout_alignLeft="@+id/tv_pro_descri"
            android:layout_alignRight="@+id/tv_pro_name"
            android:layout_alignEnd="@+id/tv_pro_name"
            android:layout_marginTop="50dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>


<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Your Product"
            android:textColor="#808080"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="10dp"/>

        <FrameLayout
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_img_icon"
                android:background="#efefef"/>

            <ImageView
                android:id="@+id/changeProductImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="bottom|right"
                android:src="@drawable/ic_camera_circle"/>

            <!--<com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/changeProductImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|right"
                android:src="@drawable/ic_camera_circle"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="3dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#000000"
                app:civ_shadow_radius="1" />-->

        </FrameLayout>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etProdNm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:inputType="textCapSentences"
            android:textSize="16dp"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/tersite_blue"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etProdPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:inputType="number"
            android:textSize="16dp"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/tersite_blue"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etProdCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category"
            android:inputType="none"
            android:editable="false"
            android:focusable="false"
            android:textSize="16dp"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/tersite_blue"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etProdDesc"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="textCapSentences"
            android:textSize="16dp"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/tersite_blue" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:background="#02938C"
            android:text="Add Product"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
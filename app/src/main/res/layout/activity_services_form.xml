<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chatbackground"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/gradient_background"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/header_cover_image"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:elevation="5dp"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/user_profile_photo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_user" />

                    <ImageView
                        android:id="@+id/edit_profile_photo"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="bottom|right"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_camera_circle" />

                </FrameLayout>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etOrganisationName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:hint="Organisation Name"
                    android:inputType="textCapSentences"
                    android:padding="5dp"
                    android:textSize="17dp"
                    app:met_baseColor="#000000"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/tersite_blue" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etAdharNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:hint="Adhar no."
                    android:inputType="number"
                    android:padding="5dp"
                    android:textSize="17dp"
                    app:met_baseColor="#000000"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/tersite_blue" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Service Category"
                    android:inputType="textCapSentences"
                    android:padding="5dp"
                    android:textSize="17dp"
                    android:editable="false"
                    android:focusable="false"
                    app:met_baseColor="#000000"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/tersite_blue" />


                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact no."
                    android:inputType="number"
                    android:padding="5dp"
                    android:textSize="17dp"
                    app:met_baseColor="#000000"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/tersite_blue" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email id"
                    android:inputType="textCapSentences"
                    android:padding="5dp"
                    android:textSize="17dp"
                    app:met_baseColor="#000000"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/tersite_blue" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:hint="Address"
                    android:inputType="textCapSentences"
                    android:padding="5dp"
                    android:textSize="17dp"
                    app:met_baseColor="#000000"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/tersite_blue" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etPinCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:hint="Pincode"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textSize="17dp"
                    app:met_baseColor="#000000"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/tersite_blue" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:hint="City"
                    android:inputType="textCapSentences"
                    android:padding="5dp"
                    android:textSize="17dp"
                    android:editable="false"
                    android:focusable="false"
                    app:met_baseColor="#000000"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/tersite_blue" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etHoliday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:hint="Holiday"
                    android:inputType="textCapSentences"
                    android:padding="5dp"
                    android:editable="false"
                    android:focusable="false"
                    android:textSize="17dp"
                    app:met_baseColor="#000000"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="@color/tersite_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Available Time"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/etTimeFrom"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:hint="From"
                        android:inputType="date"
                        android:layout_gravity="center"
                        android:textSize="17dp"
                        app:met_baseColor="#000000"
                        android:editable="false"
                        android:focusable="false"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="@color/tersite_blue" />

                    <TextView
                        android:id="@+id/tvTimeFrom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:hint="AM"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/etTimeTo"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:hint="To"
                        android:textSize="17dp"
                        android:inputType="date"
                        android:layout_gravity="center"
                        android:editable="false"
                        android:focusable="false"
                        app:met_baseColor="#000000"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="@color/tersite_blue" />

                    <TextView
                        android:id="@+id/tvTimeTo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:hint="PM"
                        android:padding="5dp"
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical"
                        android:textSize="15dp" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/gradient_background"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:text="Location"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="click on map icon to choose location"
                    android:padding="3dp"
                    android:layout_marginLeft="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btnMap"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.4"
                        android:src="@drawable/baloon1" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/etLatti"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:hint="Lattitude"
                        android:inputType="none"
                        android:padding="5dp"
                        android:editable="false"
                        android:textSize="11dp"
                        app:met_baseColor="#000000"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="@color/tersite_blue" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/etLongi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:hint="Longitude"
                        android:editable="false"
                        android:inputType="none"
                        android:padding="5dp"
                        android:textSize="11dp"
                        app:met_baseColor="#000000"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="@color/tersite_blue" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnRegisterService"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="20dp"
                    android:text="Register Now"
                    android:background="@color/colorPrimary"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp"
                    android:textStyle="normal" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
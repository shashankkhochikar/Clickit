<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/ic_user"/>

            <ImageView
                android:id="@+id/editUserProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit_circle"
                android:layout_gravity="bottom|right"/>

            <!--<com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profile_img"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/ic_user"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="1dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#000000"
                app:civ_shadow_radius="3" />-->

            <!--<com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/editUserProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|right"
                android:src="@drawable/ic_edit_gray"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="3dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#000000"
                app:civ_shadow_radius="1" />-->

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/userFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                android:hint="FirstName"
                app:met_baseColor="#808080"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/tersite_blue" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/userLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                android:hint="LastName"
                app:met_baseColor="#808080"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/tersite_blue" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/userMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile No."
                android:inputType="phone"
                app:met_baseColor="#808080"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/tersite_blue" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/userEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                app:met_baseColor="#808080"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/tersite_blue" />

        </LinearLayout>

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            android:text="UPDATE"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>